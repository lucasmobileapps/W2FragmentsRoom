<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/friend_edittext"
        android:layout_width="0dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:padding="16dp"
        android:hint="Friend"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/work_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="none"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@+id/name_edittext" />

    <TextView
        android:id="@+id/work_edittext"
        android:layout_width="0dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:padding="16dp"
        android:hint="Work"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/family_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="none"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@+id/friend_edittext" />

    <TextView
        android:id="@+id/family_edittext"
        android:layout_width="0dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:padding="16dp"
        android:hint="Family"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="none"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@+id/work_edittext" />


</androidx.constraintlayout.widget.ConstraintLayout>